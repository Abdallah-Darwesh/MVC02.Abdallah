@model CreateEmployeesDto
@{
    ViewData["Title"] = "Create Employee";
}

@{
	var Departments = new SelectList(ViewData["departments"] as IEnumerable<Department>,"Id","Name");
}

<h1>Create New Employee</h1>



<form asp-action="Create" enctype="multipart/form-data" method="post">

    <div class="my-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="my-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="my-3">
        <label asp-for="HireDate" class="form-label"></label>
        <input asp-for="HireDate" type="date" class="form-control" />
        <span asp-validation-for="HireDate" class="text-danger"></span>
    </div>

    <div class="my-3">
        <label asp-for="CreateAt" class="form-label"></label>
        <input asp-for="CreateAt" type="date" class="form-control" />
        <span asp-validation-for="CreateAt" class="text-danger"></span>
    </div>

    <div class="my-3">
        <label asp-for="Address" class="form-label"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="my-3">
        <label asp-for="Phone" class="form-label"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="my-3">
        <label asp-for="Salary" class="form-label"></label>
        <input asp-for="Salary" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>
    <div class="my-3">
        <label asp-for="image" class="form-label"></label>
        <input asp-for="image" class="form-control"  />
    </div>

    <div class="my-3">
        <label asp-for="DepartmentId" class="form-label"></label>

        <select asp-for="DepartmentId" asp-items="Departments">
            
        </select>
        <span asp-validation-for="DepartmentId" class="text-danger"></span>
    </div>

    <div class="my-3 form-check">
        <input asp-for="isActive" class="form-check-input" />
        <label asp-for="isActive" class="form-check-label"></label>
    </div>

    <div class="my-3 form-check">
        <input asp-for="isDeleted" class="form-check-input" />
        <label asp-for="isDeleted" class="form-check-label"></label>
    </div>

    <div>
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back To List</a>
    </div>

</form>
@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>

    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
        }