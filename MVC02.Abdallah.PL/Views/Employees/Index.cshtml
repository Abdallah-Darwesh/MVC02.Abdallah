@model IEnumerable<Employees>
@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Employees</h1>
        <a asp-action="Create" asp-controller="Employees" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create Employee
        </a>
    </div>

    @if (!string.IsNullOrEmpty(TempData["Messege"] as string))
    {
        <div class="alert alert-success">
            @TempData["Messege"]
        </div>
    }

    <form method="get" class="row g-2 mb-4">
        <div class="col-md-8">
            <input name="SearchInput" class="form-control" placeholder="Search by name..." />
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-outline-secondary w-100">Search</button>
        </div>
    </form>

    @if (Model != null && Model.Any())
    {
        <table class="table table-bordered table-striped text-center align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Salary</th>
                    <th>Date Of Creation</th>
                    <th colspan="3">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        <td>@item.Salary</td>
                        <td>@item.CreateAt.ToShortDateString()</td>

                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                Details
                            </a>
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                Update
                            </a>
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-danger text-center">
            There are no employees to display.
        </div>
    }

</div>
