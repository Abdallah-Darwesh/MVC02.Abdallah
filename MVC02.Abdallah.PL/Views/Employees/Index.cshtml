@model IEnumerable<Employees>
@{
    ViewData["Title"] = "Index";
}

<h1>Employees</h1>
<br />
<br />

<a asp-action="Create"  asp-controller="Employees" class="btn btn-primary">Create Employee</a>
<br />
<br />

@if (Model.Count()>0)
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
				<th>Salary</th>
                <th>Date Of Creation</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.Salary</td>

                    <td>@item.CreateAt</td>
                    <td></td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">Details</a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Update</a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>

                    </td>
                </tr>
            }
        </tbody>

    </table>

}
else
{
    <div>
        <h4 class="alert alert-danger">There is no longer Employees</h4>
    </div>
}


