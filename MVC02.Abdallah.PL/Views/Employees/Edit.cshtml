@model Employees
@{
    ViewData["Title"] = "Edit Employee";
}

<h1>Edit Employee</h1>

<form asp-action="Edit" method="post">

    <div class="my-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="my-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="my-3">
        <label asp-for="HireDate" class="form-label"></label>
        <input asp-for="HireDate" class="form-control" type="date" />
        <span asp-validation-for="HireDate" class="text-danger"></span>
    </div>

    <div class="my-3">
        <label asp-for="CreateAt" class="form-label"></label>
        <input asp-for="CreateAt" class="form-control" type="date" />
        <span asp-validation-for="CreateAt" class="text-danger"></span>
    </div>

    <div class="my-3">
        <label asp-for="Address" class="form-label"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="my-3">
        <label asp-for="Phone" class="form-label"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="my-3">
        <label asp-for="Salary" class="form-label"></label>
        <input asp-for="Salary" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>

    <div class="my-3 form-check">
        <input asp-for="isActive" class="form-check-input" />
        <label asp-for="isActive" class="form-check-label"></label>
    </div>

    <div class="my-3 form-check">
        <input asp-for="isDeleted" class="form-check-input" />
        <label asp-for="isDeleted" class="form-check-label"></label>
    </div>

    <div>
        <input type="submit" value="Update" class="btn btn-warning" />
        <a asp-action="Index" class="btn btn-secondary">Back To List</a>
    </div>
</form>
